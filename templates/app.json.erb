{
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    {
      "plan": "deployhooks:http",
      "url": "<%= options[:slack_webhook_url] %>"
    }
  ],
  "name": "<%= heroku_app_name %>",
  "env": {
    "APPLICATION_HOST": {
      "required": true
    },
    "COOKIE_DOMAIN": {
      "required": true
    },
    "EMAIL_RECIPIENTS": {
      "required": true
    },
    "HEROKU_APP_NAME": {
      "required": true
    },
    "HEROKU_PARENT_APP_NAME": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "SMTP_ADDRESS": {
      "required": true
    },
    "SMTP_DOMAIN": {
      "required": true
    },
    "SMTP_PASSWORD": {
      "required": true
    },
    "SMTP_USERNAME": {
      "required": true
    }
  },
  "formation": {
    "worker": {
      "quantity": 1
    }
  },
  "scripts": {
    "postdeploy": "bin/rails db:migrate dev:db:seed"
  }
}
